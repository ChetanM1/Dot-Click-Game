<!DOCTYPE html>
<html>
<head>
  <title>Red Dot Click Game</title>
  <style>
    #game-box {
      width: 600px;
      height: 400px;
      border: 2px solid black;
      position: relative;
      margin: 0 auto;
      margin-top: 50px;
    }

    #dot {
      width: 20px;
      height: 20px;
      background-color: red;
      border-radius: 50%;
      position: absolute;
      cursor: pointer;
      display: none;
    }

    #stats {
      text-align: center;
      font-size: 1.5em;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1 style="text-align:center;">Click the Red Dot!</h1>
  <div id="stats">
    <p>Time Left: <span id="timer">60</span> seconds</p>
    <p>Clicks: <span id="clicks">0</span></p>
    <p>Best Score: <span id="best">0</span></p>
    <button id="startBtn">Start Game</button>
  </div>

  <div style="text-align:center; margin-top: 10px;">
  <a href="/">
    <button>Back to Home</button>
  </a>
</div>

  <div id="game-box">
    <div id="dot"></div>
  </div>

  <script>
    const dot = document.getElementById('dot');
    const gameBox = document.getElementById('game-box');
    const timerSpan = document.getElementById('timer');
    const clicksSpan = document.getElementById('clicks');
    const bestSpan = document.getElementById('best');
    const startBtn = document.getElementById('startBtn');

    let clicks = 0;
    let timeLeft = 60;
    let timerId;
    let gameStarted = false;

    // Load best score from localStorage
    let bestScore = localStorage.getItem('bestScore') || 0;
    bestSpan.textContent = bestScore;

    function randomPosition() {
      const maxX = gameBox.clientWidth - dot.offsetWidth;
      const maxY = gameBox.clientHeight - dot.offsetHeight;
      const x = Math.floor(Math.random() * maxX);
      const y = Math.floor(Math.random() * maxY);
      dot.style.left = `${x}px`;
      dot.style.top = `${y}px`;
    }

    function startGame() {
      if (gameStarted) return;

      gameStarted = true;
      clicks = 0;
      timeLeft = 60;
      clicksSpan.textContent = 0;
      timerSpan.textContent = 60;
      dot.style.display = 'block';
      randomPosition();

      timerId = setInterval(() => {
        timeLeft--;
        timerSpan.textContent = timeLeft;

        if (timeLeft <= 0) {
          clearInterval(timerId);
          dot.style.display = 'none';
          gameStarted = false;
          if (clicks > bestScore) {
            bestScore = clicks;
            localStorage.setItem('bestScore', bestScore);
            bestSpan.textContent = bestScore;
          }
          sendScore(clicks);
        }
      }, 1000);
    }

    dot.addEventListener('click', () => {
      if (!gameStarted) return;
      clicks++;
      clicksSpan.textContent = clicks;
      randomPosition();
    });

    startBtn.addEventListener('click', startGame);

   function sendScore(score) {
    fetch('/game/result', {
      method: 'POST',
      headers: { 
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify({ score: score })
    })
    .then(response => {
      if (!response.ok) {
        console.error('Failed to save score');
      }
    })
    .catch(error => {
      console.error('Error saving score:', error);
    });
  }
  </script>
</body>
</html>